{
    "type": "module",
    "scripts": {
        "yaml": "rollup -c -i ../../../../script/engine/main/node_modules/yaml/browser/index.js -o ./dist/yaml.js",
        "spine-core": "rollup -c -i ../../../../script/engine/main/node_modules/@esotericsoftware/spine-core/dist/index.js -o ./dist/spine-core.js",
        "gfx-main": "tsc -p ../../../../script/gfx/main --outDir dist/gfx-main --module system --watch",
        "gfx-webgl": "tsc -p ../../../../script/gfx/webgl --outDir dist/gfx-webgl --module system --watch",
        "engine-main": "tsc -p ../../../../script/engine/main --outDir dist/engine-main --module system --watch",
        "engine-wx": "tsc -p ../../../../script/engine/wx --outDir dist/engine-wx --module system --watch",
        "server": "http-server ../../../../ -p 8003 -o projects/shadow/script/wx/index.html -e js -c-1",
        "dev": "concurrently \"tsc --module system --watch\" \"npm run gfx-main\" \"npm run gfx-webgl\" \"npm run engine-main\" \"npm run engine-wx\" \"npm run server\""
    },
    "dependencies": {
        "engine-wx": "file:../../../../script/engine/wx"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.15",
        "@rollup/plugin-babel": "^6.0.3"
    }
}
